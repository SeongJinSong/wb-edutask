{
  "info": {
    "name": "WB Education Task Management System",
    "description": "WB 교육 업무 관리 시스템 API 컬렉션",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "회원 관리 API",
      "description": "회원 가입, 조회, 유효성 검증 API",
      "item": [
        {
          "name": "회원 가입",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"홍길동\",\n  \"email\": \"hong@weolbu.com\",\n  \"phoneNumber\": \"010-1234-5678\",\n  \"password\": \"Test123\",\n  \"memberType\": \"STUDENT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/members/register",
              "host": ["{{baseUrl}}"],
              "path": ["members", "register"]
            }
          },
          "response": []
        },
        {
          "name": "ID로 회원 조회",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/members/1",
              "host": ["{{baseUrl}}"],
              "path": ["members", "1"]
            }
          },
          "response": []
        },
        {
          "name": "이메일로 회원 조회",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/members/email/hong@weolbu.com",
              "host": ["{{baseUrl}}"],
              "path": ["members", "email", "hong@weolbu.com"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "강의 관리 API",
      "description": "강의 등록, 조회, 수정, 삭제 API (개발 예정)",
      "item": [
        {
          "name": "강의 등록",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"너나위의 내집마련 기초반\",\n  \"maxCapacity\": 10,\n  \"price\": 200000,\n  \"instructorId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/courses/register",
              "host": ["{{baseUrl}}"],
              "path": ["courses", "register"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "수강 신청 API",
      "description": "수강 신청, 신청 취소, 신청 내역 조회 API (개발 예정)",
      "item": [
        {
          "name": "수강 신청",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"memberId\": 1,\n  \"courseIds\": [1, 2, 3]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/enrollments/register",
              "host": ["{{baseUrl}}"],
              "path": ["enrollments", "register"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
